{
    "extends": "@hexaijs/tooling/tsconfig/node.json",
    "compilerOptions": {
        "rootDir": "./src",
        "baseUrl": ".",
        "outDir": "./dist",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["src"],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.spec.ts",
        "**/*.test.ts",
        "**/*.fixtures.ts"
    ]
}
