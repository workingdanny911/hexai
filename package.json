        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "dotenv": "^16.4.5",
        "eslint": "^8.57.0",
        "prettier": "^3.3.3",
        "ts-toolbelt": "^9.6.0",
        "tsc-alias": "^1.8.16",
        "tsup": "^8.5.1",
        "typescript": "^5.5.4",
        "vite-tsconfig-paths": "^4.3.2",
        "vitest": "3.2.4"
    }
